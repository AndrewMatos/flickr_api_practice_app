<% unless  @flicker_id %>
	<%= form_tag("/", method: "get") do %>
		<%= label_tag(:f_id, "Flicker user id:") %>
		<%= text_field_tag(:f_id)%>
		<%= submit_tag("Search pictures") %>
	<% end %>

<% else %>
	<!-- <p><%= @flicker_id %></p> -->
	<ul>
		<% @photos.each do |photo| %>
			<li><img height="300" src="https://farm<%=photo.farm%>.staticflickr.com/<%=photo.server%>/<%=photo.id%>_<%=photo.secret%>.jpg"></li>
		<% end %>
   </ul>

<% end %>


